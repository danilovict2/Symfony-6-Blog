{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }} - Create Post
{% endblock %}

{% block body %}
	<div class="container d-flex flex-column">
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<h1>Create New Post</h1>
				<hr>
				{{ form_start(post_form) }}
				<div class="form-group mb-3">
					{{ form_label(post_form.title) }}
					{{ form_widget(post_form.title, {'attr' : {'class' : 'form-control'}}) }}
				</div>

				<div class="form-group mb-3">
					{{ form_label(post_form.body) }}
					{{ form_widget(post_form.body, {'attr' : {'class' : 'form-control'}}) }}
				</div>

				{{ form_row(post_form.submit, {'attr' : {'class' : 'btn btn-success'}}) }}

				{{ form_end(post_form) }}

			</div>
		</div>
	</div>

{% endblock %}
